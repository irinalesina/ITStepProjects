<Window x:Class="ExampleSlider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Slider  VerticalAlignment="Center" HorizontalAlignment="Center"  MinWidth="350" ValueChanged="Slider_ValueChanged" ToolTip="Демонстрация Slider" Minimum="-100" Maximum="100" TickFrequency="10" TickPlacement="Both" SmallChange="1" />
        <Label x:Name="lbValue" Grid.Row="1" Margin="5" FontSize="13" FontWeight="Bold"> </Label>
    </Grid>
</Window>
