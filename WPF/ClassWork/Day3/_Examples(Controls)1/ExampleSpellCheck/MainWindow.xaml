<Window x:Class="ExampleSpellCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Демонстрация реализации проверки правописания-->
        <TextBox x:Name="txtMainText" SpellCheck.IsEnabled="True" Language="en-En" TextWrapping="Wrap" Margin="10" Padding="5" TextAlignment="Justify" SelectionChanged="TextBox_SelectionChanged">
            Windows Presentation Foundation provides developers with a unified programming model for building rich Windows smart client user experiences that incorporate UI, media, and documents.
        </TextBox>
        
        <TextBox  x:Name="txtInfo" Grid.Row="1" TextWrapping="Wrap" Margin="10" Padding="5" TextAlignment="Justify"/>
        
        <TextBox  x:Name="txtSelectText" Grid.Row="2" TextWrapping="Wrap" Margin="10" Padding="5" TextAlignment="Justify"/>


    </Grid>
</Window>
